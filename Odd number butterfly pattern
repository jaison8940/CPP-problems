#include <iostream>
using namespace std;
int main(int argc, char** argv)
{
    int n,i,j,dash=0,c=1,m,k=1,l,cc,d,b=0,dd,z=0,co=2,t,a=1;
    cin>>n;
    dd=n-2;
    for(i=0;i<n;i++)
    {
        for(j=0;j<dash;j++) cout<<"-";
        if(i==n/2) cout<<"0";
        else 
        {  
            if(i<n/2) m=(n+1)/2-i;
            if(i<n/2){
            if(b%2==0)
            {
                for(j=1;j<=m;j++) 
                {cout<<c++;if(j<m) cout<<"-";} 
                l=c;
                c--;
                for(j=1;j<=dd;j++)cout<<"-";
                for(j=1;j<=m;j++) 
                {cout<<c--; if(j<m) cout<<"-";}
                c=l-1;
                d=c;
                dd=dd-2;
            }
            else
            {
                cc=d+m;
                for(j=1;j<=m;j++) 
                {cout<<cc--;if(j<m) cout<<"-";}
                cc=cc+1;
                for(j=1;j<=dd;j++) cout<<"-";
                for(j=1;j<=m;j++) 
                {cout<<cc++; if(j<m) cout<<"-";}
                d=0;
                c=cc;
                dd=dd-2;
            }
            b++;}
            else{
                if(z%2==0)
                {
                    for(j=1;j<=m;j++)
                    {cout<<co--;if(j<m) cout<<"-";}
                    co=co+1;
                    for(j=1;j<=a;j++) cout<<"-";
                    for(j=1;j<=m;j++)
                    {cout<<co++;if(j<m) cout<<"-";}
                    a+=2;
                }
                else{
                    for(j=1;j<=m;j++) 
                    {cout<<co++;if(j<m)cout<<"-";}
                    co--;
                    t=co;
                    for(j=1;j<=a;j++) cout<<"-";
                    for(j=1;j<=m;j++)
                    {cout<<co--;if(j<m) cout<<"-";}
                    co=t+m+1;
                    a+=2;
                }
                z++;
            }
            if(i>n/2) m++;
        } 
        cout<<endl;
        if(i<n/2) dash+=3;
        else dash-=3;
    }
    


}
